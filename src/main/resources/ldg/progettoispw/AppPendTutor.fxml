                            <Label fx:id="lblData" text="Data: -" textFill="WHITE"><font><Font size="14.0" /></font></Label>
                            <Label fx:id="lblOra" text="Ora: -" textFill="WHITE"><font><Font size="14.0" /></font></Label>
                            <Label fx:id="lblStato" text="Stato: -" textFill="#f1c40f"><font><Font name="System Bold" size="14.0" /></font></Label>
