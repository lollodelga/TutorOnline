                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <ScrollPane fx:id="scrollResults" fitToWidth="true" hbarPolicy="NEVER" prefHeight="380.0" prefWidth="500.0" style="-fx-background-color: transparent; -fx-background: transparent;">
